    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "^13.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@types/node": "^18.7.23",
    "@types/react": "^18.0.23",
    "@types/react-dom": "18.0.7",
    "autoprefixer": "^10.4.11",
    "eslint": "^8.24.0",
    "eslint-config-next": "^12.3.1",
    "konk": "^0.27.0",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "typescript": "^4.8.4"
  }
}
